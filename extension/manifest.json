{
    "manifest_version": 3,
    "name": "Remote Terminal Pro",
    "version": "3.0.0",
    "description": "Professional remote terminal with authentication, search, and secure WSS support",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Remote Terminal Pro",
        "default_icon": {
            "16": "./icons/icon16.png",
            "48": "./icons/icon48.png",
            "128": "./icons/icon128.png"

        }
    },
    "icons": {
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["terminal.html", "./lib/xterm.css", "./lib/xterm.js"],
            "matches": ["<all_urls>"]
        }
    ]
}